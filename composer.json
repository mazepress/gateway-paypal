{
	"name": "mazepress/gateway-paypal",
	"type": "wordpress-plugin",
	"description": "A custom WordPress plugin.",
	"license": "MIT",
  "repositories": [
    {
      "type": "composer",
      "url": "https://mazepress.github.io/packagist"
    }
  ],
	"require": {
		"php": "^7.4 | ^8.0",
		"composer/installers": "^2.2",
		"mazepress/gateway": "^1.2",
		"paypal/paypal-checkout-sdk": "^1.0"
	},
	"require-dev": {
		"phpcompatibility/phpcompatibility-wp": "^2.1.4",
		"wp-coding-standards/wpcs": "^3.0.1",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"szepeviktor/phpstan-wordpress": "^1.3.2",
		"phpunit/phpunit": "^9.6.16",
		"10up/wp_mock": "^1.0",
		"teqnomaze/code-coverage": "^1.0"
	},
	"scripts": {
		"phpcs": "./vendor/bin/phpcs --standard=phpcs.xml",
		"phpcbf": "./vendor/bin/phpcbf src tests",
		"phpstan": "./vendor/bin/phpstan analyse -c phpstan.neon --memory-limit 2G",
		"phpunit": "./vendor/bin/phpunit --configuration phpunit.xml",
		"coverage": "./vendor/bin/code-coverage ./build/clover.xml 90"
	},
	"autoload": {
		"psr-4": {
			"Mazepress\\Gateway\\Paypal\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Mazepress\\Gateway\\Paypal\\Tests\\": "tests"
		}
	},
	"prefer-stable": true,
	"minimum-stability": "stable",
	"config": {
		"optimize-autoloader": true,
		"sort-packages": true,
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
  "extra": {
		"installer-paths": {
			"packages/{$name}/": ["type:wordpress-plugin"]
		}
	}
}
